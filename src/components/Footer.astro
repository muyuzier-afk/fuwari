---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();
---

<script defer src="https://my-umami-moe.zeabur.app/script.js" data-website-id="c18133ba-c744-49cc-a524-fae7e991e55c"></script>

<script>
fetch('/api/stats')
  .then(r => r.json())
  .then(d => {
    document.getElementById('site-pv').textContent = d.pageviews;
    document.getElementById('site-uv').textContent = d.visitors;
  })
  .catch(() => {});
</script>

