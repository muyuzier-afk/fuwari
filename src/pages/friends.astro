---
import MainGridLayout from "../layouts/MainGridLayout.astro";

const blogs = [
	{
		name: "AcoFork Blog",
		desc: "技术分享与实践",
		url: "https://blog.acofork.com/",
		avatar: "/src/assets/images/acofork.jpg",
	},
];

const forums = [
	{
		name: "Linux.do",
		desc: "新的理想型社区",
		url: "https://linux.do",
		avatar: "https://linux.do/logo-100.svg",
	},
	{
		name: "NodeSeek",
		desc: "VPS 交流社区",
		url: "https://www.nodeseek.com",
		avatar: "https://www.nodeseek.com/static/image/favicon/android-chrome-192x192.png",
	},
	{
		name: "V2EX",
		desc: "创意工作者的社区",
		url: "https://www.v2ex.com",
		avatar: "https://www.v2ex.com/static/icon-192.png",
	},
	{
		name: "Hostloc",
		desc: "全球主机交流论坛",
		url: "https://hostloc.com",
		avatar: "https://hostloc.com/favicon.ico",
	},
	{
		name: "哔哩哔哩",
		desc: "国内知名视频弹幕网站",
		url: "https://www.bilibili.com",
		avatar: "https://www.bilibili.com/favicon.ico",
		svg: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M17.813 4.653h.854c1.51.054 2.769.578 3.773 1.574 1.004.995 1.524 2.249 1.56 3.76v7.36c-.036 1.51-.556 2.769-1.56 3.773s-2.262 1.524-3.773 1.56H5.333c-1.51-.036-2.769-.556-3.773-1.56S.036 18.858 0 17.347v-7.36c.036-1.511.556-2.765 1.56-3.76 1.004-.996 2.262-1.52 3.773-1.574h.774l-1.174-1.12a1.234 1.234 0 0 1-.373-.906c0-.356.124-.659.373-.907l.027-.027c.267-.249.573-.373.92-.373.347 0 .653.124.92.373L9.653 4.44c.071.071.134.142.187.213h4.267a.836.836 0 0 1 .16-.213l2.853-2.747c.267-.249.573-.373.92-.373.347 0 .662.151.929.4.267.249.391.551.391.907 0 .355-.124.657-.373.906zM5.333 7.24c-.746.018-1.373.276-1.88.773-.506.498-.769 1.13-.786 1.894v7.52c.017.764.28 1.395.786 1.893.507.498 1.134.756 1.88.773h13.334c.746-.017 1.373-.275 1.88-.773.506-.498.769-1.129.786-1.893v-7.52c-.017-.765-.28-1.396-.786-1.894-.507-.497-1.134-.755-1.88-.773zM8 11.107c.373 0 .684.124.933.373.25.249.383.569.4.96v1.173c-.017.391-.15.711-.4.96-.249.25-.56.374-.933.374s-.684-.125-.933-.374c-.25-.249-.383-.569-.4-.96V12.44c0-.373.129-.689.386-.947.258-.257.574-.386.947-.386zm8 0c.373 0 .684.124.933.373.25.249.383.569.4.96v1.173c-.017.391-.15.711-.4.96-.249.25-.56.374-.933.374s-.684-.125-.933-.374c-.25-.249-.383-.569-.4-.96V12.44c.017-.391.15-.711.4-.96.249-.249.56-.373.933-.373z"/></svg>`,
	},
	{
		name: "Reddit",
		desc: "The front page of the internet",
		url: "https://www.reddit.com",
		avatar: "https://www.redditstatic.com/desktop2x/img/favicon/android-icon-192x192.png",
	},
];
---
<MainGridLayout title="友链" description="友情链接">
    <div class="card-base z-10 px-6 py-6 relative w-full">
        <h1 class="text-2xl font-bold mb-4 text-neutral-900 dark:text-neutral-100">友情链接</h1>
        <p class="text-neutral-500 mb-6">欢迎交换友链！</p>

        <h2 class="text-lg font-bold mb-3 text-neutral-900 dark:text-neutral-100">博客</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
            {blogs.map(friend => (
                <a href={friend.url} target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-4 p-4 rounded-xl border border-black/10 dark:border-white/10
                          hover:bg-[var(--btn-plain-bg-hover)] transition-all duration-200
                          hover:scale-[1.02] active:scale-[0.98]">
                    <img src={friend.avatar} alt={friend.name}
                         class="w-14 h-14 rounded-full object-cover flex-shrink-0" />
                    <div class="overflow-hidden">
                        <div class="font-bold text-neutral-900 dark:text-neutral-100 truncate">{friend.name}</div>
                        <div class="text-sm text-neutral-500 truncate">{friend.desc}</div>
                    </div>
                </a>
            ))}
        </div>

        <h2 class="text-lg font-bold mb-3 text-neutral-900 dark:text-neutral-100">论坛</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {forums.map(friend => (
                <a href={friend.url} target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-4 p-4 rounded-xl border border-black/10 dark:border-white/10
                          hover:bg-[var(--btn-plain-bg-hover)] transition-all duration-200
                          hover:scale-[1.02] active:scale-[0.98]">
                    {friend.svg ? (
                        <div class="w-14 h-14 flex-shrink-0 flex items-center justify-center text-[#00a1d6]" set:html={friend.svg} />
                    ) : (
                        <img src={friend.avatar} alt={friend.name}
                             class="w-14 h-14 rounded-full object-cover flex-shrink-0" />
                    )}
                    <div class="overflow-hidden">
                        <div class="font-bold text-neutral-900 dark:text-neutral-100 truncate">{friend.name}</div>
                        <div class="text-sm text-neutral-500 truncate">{friend.desc}</div>
                    </div>
                </a>
            ))}
        </div>

        <div class="mt-8 pt-6 border-t border-black/10 dark:border-white/10">
            <h2 class="text-lg font-bold mb-3 text-neutral-900 dark:text-neutral-100">申请友链</h2>
            <p class="text-neutral-500 text-sm">请提供：网站名称、描述、链接、图标</p>
            <p class="text-neutral-500 text-sm mt-2">联系邮箱：<span id="email" class="text-[var(--primary)] cursor-pointer hover:underline"></span></p>
        </div>
    </div>
</MainGridLayout>

<script>
const e = ['m','u','y','u','z','i','e','r','@','g','m','a','i','l','.','c','o','m'];
const el = document.getElementById('email');
if (el) {
    el.textContent = e.join('');
    el.onclick = () => window.location.href = 'mai' + 'lto:' + e.join('');
}
</script>
